<?xml version="1.0" encoding="UTF-8"?>
<Report xmlns="http://soap.sforce.com/2006/04/metadata">
    <name>Active Portal Users</name>
    <description>Portal users who logged in within the last 30 days</description>
    <reportType>ContactList</reportType>
    <format>Tabular</format>
    <columns>
        <field>FIRST_NAME</field>
    </columns>
    <columns>
        <field>LAST_NAME</field>
    </columns>
    <columns>
        <field>Contact.SP_Username__c</field>
    </columns>
    <columns>
        <field>Contact.SP_Role__c</field>
    </columns>
    <columns>
        <field>Contact.SP_Last_Login__c</field>
    </columns>
    <columns>
        <field>Contact.SP_Status__c</field>
    </columns>
    <sortColumn>Contact.SP_Last_Login__c</sortColumn>
    <sortOrder>Desc</sortOrder>
    <filter>
        <criteriaItems>
            <column>Contact.SP_Enabled__c</column>
            <columnToColumn>false</columnToColumn>
            <isUnlocked>true</isUnlocked>
            <operator>equals</operator>
            <value>1</value>
        </criteriaItems>
        <criteriaItems>
            <column>Contact.SP_Last_Login__c</column>
            <columnToColumn>false</columnToColumn>
            <isUnlocked>true</isUnlocked>
            <operator>greaterOrEqual</operator>
            <value>LAST_N_DAYS:30</value>
        </criteriaItems>
    </filter>
    <showDetails>true</showDetails>
    <timeFrameFilter>
        <dateColumn>CREATED_DATE</dateColumn>
        <interval>INTERVAL_CUSTOM</interval>
    </timeFrameFilter>
</Report>
